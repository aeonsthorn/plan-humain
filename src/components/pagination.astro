---
const { prevUrl, nextUrl, current, length } = Astro.props;
const numbersArray = Array.from({ length }, (_, index) => index + 1);
console.log(numbersArray);
---

<nav class="flex py-4">
  <div class="w-1/3">
    {
      prevUrl && (
        <a class="flex" href={prevUrl + "#blog"}>
          <svg
            version="1.1"
            id="Layer_1"
            xmlns="http://www.w3.org/2000/svg"
            xmlns:xlink="http://www.w3.org/1999/xlink"
            viewBox="0 0 32 32"
            xml:space="preserve"
            width="84px"
            height="84px"
            fill="#000000"
          >
            <g
              id="SVGRepo_tracerCarrier"
              stroke-linecap="round"
              stroke-linejoin="round"
            />
            <>
              <g id="SVGRepo_bgCarrier" stroke-width="0" />
              <g id="SVGRepo_iconCarrier">
                {" "}
                <line
                  style="fill:none;stroke:#e3ddbd;stroke-width:2;stroke-miterlimit:10;"
                  x1="6"
                  y1="16"
                  x2="28"
                  y2="16"
                />{" "}
                <polyline
                  style="fill:none;stroke:#e3ddbd;stroke-width:2;stroke-miterlimit:10;"
                  points="11.515,22 5.515,16 11.515,10 "
                />{" "}
              </g>
            </>
          </svg>
        </a>
      )
    }
  </div>
  <div class="w-1/3 flex justify-between">
    {
      numbersArray.map((num) => (
        <div class="flex items-center align-middle">
          <a class={num === 1} href={`/blog${num == 1 ? "" : "/" + num}`}>
            {num}
          </a>
        </div>
      ))
    }
  </div>

  <div class="w-1/3">
    {
      nextUrl && (
        <a class="flex" href={nextUrl + "#blog"}>
          <svg
            version="1.1"
            id="Layer_1"
            xmlns="http://www.w3.org/2000/svg"
            xmlns:xlink="http://www.w3.org/1999/xlink"
            viewBox="0 0 32 32"
            xml:space="preserve"
            width="84px"
            height="84px"
            fill="#000000"
          >
            <g
              id="SVGRepo_tracerCarrier"
              stroke-linecap="round"
              stroke-linejoin="round"
            />
            <>
              <g id="SVGRepo_bgCarrier" stroke-width="0" />
              <g id="SVGRepo_iconCarrier">
                {" "}
                <line
                  style="fill:none;stroke:#e3ddbd;stroke-width:2;stroke-miterlimit:10;"
                  x1="26"
                  y1="16"
                  x2="4"
                  y2="16"
                />{" "}
                <polyline
                  style="fill:none;stroke:#e3ddbd;stroke-width:2;stroke-miterlimit:10;"
                  points="20.485,10 26.485,16 20.485,22 "
                />{" "}
              </g>
            </>
          </svg>
        </a>
      )
    }
  </div>
</nav>
